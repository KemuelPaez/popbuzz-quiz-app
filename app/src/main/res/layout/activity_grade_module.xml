<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GradeModule">



    <ImageView
        android:id="@+id/wave_bcg"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_home_wave"></ImageView>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wave_bcg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_bold"
        android:text="GRADE CHECKER"
        android:textAlignment="center"
        android:textColor="@color/lightgreen"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_title"
        android:background="@color/black" />

    <TextView
        android:id="@+id/tv_engage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_line"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/poppins_bold"
        android:text="ENGAGE"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_engage"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_line"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/tv_engage"
        android:fontFamily="@font/poppins_medium"
        android:hint="ENGAGE 10%"
        android:inputType="number"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tv_elaborate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_engage"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/poppins_bold"
        android:text="ELABORATE"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_elaborate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_engage"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/tv_elaborate"
        android:fontFamily="@font/poppins_medium"
        android:hint="ELABORATE 10%"
        android:inputType="number"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tv_explore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_elaborate"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/poppins_bold"
        android:text="EXPLORE"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_explore"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_elaborate"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/tv_explore"
        android:fontFamily="@font/poppins_medium"
        android:hint="EXPLORE 20%"
        android:inputType="number"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tv_evaluate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_explore"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/poppins_bold"
        android:text="EVALUATE"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_evaluate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_explore"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/tv_evaluate"
        android:fontFamily="@font/poppins_medium"
        android:hint="EVALUATE 40%"
        android:inputType="number"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tv_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_evaluate"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/poppins_bold"
        android:text="EXPLAIN"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_explain"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_evaluate"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/tv_explain"
        android:fontFamily="@font/poppins_medium"
        android:hint="EXPLAIN 20%"
        android:inputType="number"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_explain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_bold"
        android:text="FINAL GRADE"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn_compute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_explain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/lightgreen"
        android:fontFamily="@font/poppins_medium"
        android:text="COMPUTE"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_compute"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/red"
        android:fontFamily="@font/poppins_medium"
        android:text="RESET"
        android:textSize="18sp" />



</RelativeLayout>