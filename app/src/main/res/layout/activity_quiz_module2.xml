<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizModule2">

    <ImageView
        android:id="@+id/wave_bcg"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_background_box"></ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/wave_bcg">

        <TextView
            android:id="@+id/textQuestionNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_italic"
            android:text="Questions: 1/n"
            android:textColor="@color/black"
            android:textSize="17sp"></TextView>

        <TextView
            android:id="@+id/textScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textQuestionNo"
            android:fontFamily="@font/poppins_bold"
            android:text="Score: 0"
            android:textColor="@color/black"
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/textQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textScore"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Question here . . ."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22sp"></TextView>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/textQuestion"
            android:layout_marginTop="20dp">

            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="option 1"
                android:textSize="18sp"></RadioButton>

            <RadioButton
                android:id="@+id/rb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="option 2"
                android:textSize="18sp"></RadioButton>

            <RadioButton
                android:id="@+id/rb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="option 3"
                android:textSize="18sp"></RadioButton>

        </RadioGroup>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroup"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/lightgreen"
            android:fontFamily="@font/poppins_medium"
            android:text="Next"
            android:textSize="20sp"></Button>

    </RelativeLayout>

</RelativeLayout>