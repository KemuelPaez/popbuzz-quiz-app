<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkgrey"
    tools:context=".TicTacToeGame">

    <TextView
        android:id="@+id/ttt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_bold"
        android:text="TIC TAC TOE"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"></TextView>

    <RelativeLayout
        android:id="@+id/ttt_relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ttt_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/text_p1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Player-1 score"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="15sp"></TextView>

        <TextView
            android:id="@+id/text_p2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text_p1"
            android:fontFamily="@font/poppins_bold"
            android:text="Player-2 score"
            android:textAlignment="center"
            android:textColor="@color/purple_700"
            android:textSize="15sp"></TextView>

        <TextView
            android:id="@+id/score_p1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_p1"
            android:fontFamily="@font/poppins_bold"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"></TextView>

        <TextView
            android:id="@+id/score_p2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_p2"
            android:layout_toRightOf="@+id/score_p1"
            android:fontFamily="@font/poppins_bold"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"></TextView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ttt_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ttt_relative"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn0"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1dp"
                android:backgroundTint="@color/teal_200"
                android:textSize="20sp"></Button>

            <Button
                android:id="@+id/btn1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1dp"
                android:backgroundTint="@color/teal_200"
                android:textSize="20sp"></Button>

            <Button
                android:id="@+id/btn2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1dp"
                android:backgroundTint="@color/teal_200"
                android:textSize="20sp"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1dp"
                android:backgroundTint="@color/teal_200"
                android:textSize="20sp"></Button>

            <Button
                android:id="@+id/btn4"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1dp"
                android:backgroundTint="@color/teal_200"
                android:textSize="20sp"></Button>

            <Button
                android:id="@+id/btn5"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1dp"
                android:backgroundTint="@color/teal_200"
                android:textSize="20sp"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn6"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1dp"
                android:backgroundTint="@color/teal_200"
                android:textSize="20sp"></Button>

            <Button
                android:id="@+id/btn7"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1dp"
                android:backgroundTint="@color/teal_200"
                android:textSize="20sp"></Button>

            <Button
                android:id="@+id/btn8"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1dp"
                android:backgroundTint="@color/teal_200"
                android:textSize="20sp"></Button>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/text_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ttt_linear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_bold"
        android:text="---"
        android:textColor="@color/lightgreen"
        android:textSize="24sp"></TextView>

    <Button
        android:id="@+id/btn_replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_status"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/teal_700"
        android:fontFamily="@font/poppins_medium"
        android:text="REPLAY"
        android:textSize="15sp"></Button>

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_replay"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/teal_700"
        android:fontFamily="@font/poppins_medium"
        android:text="RESET"
        android:textSize="15sp"></Button>

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_reset"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/red"
        android:fontFamily="@font/poppins_medium"
        android:text="EXIT"
        android:textSize="15sp"></Button>


</RelativeLayout>